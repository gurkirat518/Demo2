<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whats_app_image_2017_09_25_at_11_11_51"
    tools:context="com.akompany.demo2.Main2Activity">


    <ImageView
        android:id="@+id/TopBar"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:forceHasOverlappingRendering="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/rectangle" />

        <ImageView
            android:id="@+id/Circle"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="308dp"
            android:layout_marginVertical="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TopBar"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="17dp"
            app:srcCompat="@drawable/oval" />

    <ImageView
        android:id="@+id/DirectToCart"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/Circle"
        android:layout_marginLeft="11dp"
        android:layout_alignStart="@+id/Circle"
        android:layout_alignTop="@+id/Circle"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/directtocart" />

    <Button
        android:id="@+id/Cart"
        android:layout_width="22.3dp"
        android:layout_height="24dp"
        android:layout_marginVertical="23dp"
        android:forceHasOverlappingRendering="true"
        android:layout_alignLeft="@+id/DirectToCart"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/DirectToCart"
        android:layout_marginTop="28dp"
        android:background="@drawable/shopping_cart" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="109dp"
        android:layout_height="21dp"
        android:layout_alignTop="@+id/Cart"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginLeft="126dp"
        android:layout_centerHorizontal="true"
        android:text="Scan Product" />

    <ImageView
        android:id="@+id/centerRectangle"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/CenterTextBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/rectangle_8" />

    <ImageView
        android:id="@+id/CenterTextBox"
        android:layout_width="132dp"
        android:layout_height="23dp"
        android:layout_below="@+id/Circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:forceHasOverlappingRendering="true"
        app:srcCompat="@drawable/rectangle_3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="114dp"
        android:layout_height="13dp"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/CenterTextBox"
        android:layout_alignLeft="@+id/Title"
        android:layout_alignStart="@+id/Title"
        android:forceHasOverlappingRendering="true"
        android:text="Barcode Not Scanning?"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="12.3dp"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:layout_alignBottom="@+id/Title"
        android:layout_toLeftOf="@+id/TextBottom"
        android:layout_toStartOf="@+id/TextBottom"
        android:background="@drawable/shape" />

    <ImageView
        android:id="@+id/BottomBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/rectangle_2" />

    <TextView
        android:id="@+id/TextBottom"
        android:layout_width="320dp"
        android:layout_height="14dp"
        android:layout_alignEnd="@+id/DirectToCart"
        android:layout_alignRight="@+id/DirectToCart"
        android:layout_alignTop="@+id/BottomBar"
        android:layout_marginTop="11dp"
        android:text="Point Camera to the Barcode,it will scan automatically"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/DataBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/DirectToCart"
        android:layout_toLeftOf="@+id/Circle"
        android:layout_toStartOf="@+id/Circle"
        app:srcCompat="@drawable/rectangle_5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="260dp"
        android:layout_height="13dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="6dp"
        android:layout_alignBottom="@+id/DataBar"
        android:layout_alignLeft="@+id/DataBar"
        android:layout_alignStart="@+id/DataBar"
        android:text="Product will be directly added to cart.Tap to change"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="7dp"
        android:layout_height="14dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Cart"
        android:textSize="10dp"
        android:text="0"
        android:layout_marginRight="34.1dp"
        android:textColor="#FFFFFF"
         />


</RelativeLayout>
